<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="false">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-6p %d{ISO8601} [%t] %c %x - %m%n" />
		</layout>
	</appender>

	<appender name="txt" class="org.apache.log4j.FileAppender">
		<param name="File" value="exemplo2.txt" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-6p %d{ISO8601} [%t] %c %x - %m%n" />
		</layout>
	</appender>

	<logger name="br.edu.utfpr.metz.app.Log4jXmlTest">
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="txt" />
	</logger>

	<logger name="br.edu.utfpr.metz.app">
		<level value="WARN" />
		<appender-ref ref="console" />
	</logger>

	<logger name="br.edu.utfpr.metz">
		<level value="WARN" />
		<appender-ref ref="console" />
	</logger>

	<logger name="br.edu.utfpr">
		<level value="WARN" />
		<appender-ref ref="console" />
	</logger>
	
	<logger name="br.edu">
		<level value="WARN" />
		<appender-ref ref="console" />
	</logger>

	<logger name="br">
		<level value="ERROR" />
		<appender-ref ref="console" />
	</logger>

	<root>
		<priority value="FATAL" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>

