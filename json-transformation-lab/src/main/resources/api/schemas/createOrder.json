{
  "$schema": "http://json-schema.org/draft-03/schema",
  "title": "Sales order details",
  "type": "object",
  "required": true,
  "properties": {
    "creatorPerson": {
      "type": "object",
      "required": true,
      "properties": {
        "ID": {
          "type": "string",
          "maxLength": 36,
          "required": true
        },
        "firstName": {
          "type": "string",
          "maxLength": 40,
          "required": true
        },
        "familyName": {
          "type": "string",
          "maxLength": 80,
          "required": true
        }
      }
    },
    "businessCreationDate": {
      "type": "string",
      "format": "date-time",
      "required": true
    },
    "transportType": {
      "type": "object",
      "required": false,
      "properties": {
        "ID": {
          "type": "string",
          "maxLength": 36,
          "required": true
        },
        "description": {
          "type": "string",
          "maxLength": 50,
          "required": true
        }
      }
    },
    "currencyIsoCode": {
      "type": "string",
      "maxLength": 3,
      "minLength": 3,
      "required": false
    },
    "fuelSurcharge": {
      "type": "boolean",
      "required": true
    },
    "billingAddress": {
      "type": "object",
      "required": false,
      "properties": {
        "ID": {
          "type": "string",
          "maxLength": 36,
          "required": true
        },
        "addressLine": {
          "type": "string",
          "maxLength": 40,
          "required": true
        },
        "addressName": {
          "type": "string",
          "maxLength": 255,
          "required": true
        },
        "cityName": {
          "type": "string",
          "maxLength": 40,
          "required": true
        },
        "country": {
          "type": "object",
          "required": true,
          "properties": {
            "identificationCode": {
              "type": "string",
              "minLength": 2,
              "maxLength": 2,
              "required": true
            }
          }
        },
        "countrySubEntityCode": {
          "type": "string",
          "maxLength": 10,
          "required": false
        },
        "postalZone": {
          "type": "string",
          "maxLength": 20,
          "required": true
        }
      }
    },
    "customer": {
      "type": "object",
      "required": true,
      "properties": {
        "ID": {
          "type": "string",
          "maxLength": 36,
          "required": true
        }
      }
    },
    "deliveryAddress": {
      "type": "object",
      "required": false,
      "properties": {
        "ID": {
          "type": "string",
          "maxLength": 36,
          "required": true
        },
        "addressLine": {
          "type": "string",
          "maxLength": 40,
          "required": true
        },
        "addressName": {
          "type": "string",
          "maxLength": 255,
          "required": true
        },
        "cityName": {
          "type": "string",
          "maxLength": 40,
          "required": true
        },
        "country": {
          "type": "object",
          "required": true,
          "properties": {
            "identificationCode": {
              "type": "string",
              "maxLength": 2,
              "minLength": 2,
              "required": true
            }
          }
        },
        "countrySubEntityCode": {
          "type": "string",
          "maxLength": 10,
          "required": false
        },
        "postalZone": {
          "type": "string",
          "maxLength": 20,
          "required": true
        }
      }
    },
    "deliveryInstructions": {
      "type": "string",
      "maxLength": 2000,
      "required": false
    },
    "paymentCondition": {
      "type": "object",
      "required": false,
      "properties": {
        "ID": {
          "type": "string",
          "maxLength": 36,
          "required": true
        },
        "description": {
          "type": "string",
          "maxLength": 50,
          "required": true
        }
      }
    },
    "paymentDiscount": {
      "type": "object",
      "required": false,
      "properties": {
        "ID": {
          "type": "string",
          "maxLength": 36,
          "required": true
        },
        "description": {
          "type": "string",
          "maxLength": 50,
          "required": true
        }
      }
    },
    "seller": {
      "type": "object",
      "required": false,
      "properties": {
        "ID": {
          "type": "string",
          "maxLength": 36,
          "required": true
        },
        "firstName": {
          "type": "string",
          "maxLength": 40,
          "required": true
        },
        "familyName": {
          "type": "string",
          "maxLength": 80,
          "required": true
        }
      }
    }
  }
}